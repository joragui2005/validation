.PHONY: help
help:
	echo "make run compila la aplicaci贸n"
	echo "make run ejeucta la aplicaci贸n"
	echo "make stop detiene la aplicaci贸n"
	echo "make test ejecuta las pruebas de la aplicaci贸n"

.PHONY: build
build:
	go build

.PHONY: run
run:
	./awesome-api >./awesome.log 2>&1

.PHONY: stop
stop:
	kill "$(pgrep awesome-api)"

.PHONY: clean
clean:
	rm ./awesome-api.exe
	rm ./awesome-api.log

.PHONY: test
test:
	curl http://localhost:9999
	curl http://localhost:9999/health
